<h1>Listing fundraisers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Fundraiser type</th>
    <th>Date</th>
    <th>Location</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @fundraisers.each do |fundraiser| %>
  <tr>
    <td><%= fundraiser.name %></td>
    <td><%= fundraiser.fundraiser_type %></td>
    <td><%= fundraiser.date %></td>
    <td><%= fundraiser.location %></td>
    <td><%= fundraiser.description %></td>
    <td><%= link_to 'Show', fundraiser %></td>
    <td><%= link_to 'Edit', edit_fundraiser_path(fundraiser) %></td>
    <td><%= link_to 'Destroy', fundraiser, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

